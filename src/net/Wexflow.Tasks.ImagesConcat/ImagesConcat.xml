<?xml version="1.0" encoding="utf-8" ?>
<Tasks>
  <!--
    ImagesConcat is a sequential task that concatenates a collection of image files.
    
    The image file generated is loaded by this task so that other tasks can select it through the selectFiles option.
  -->
  <Task id="$int" name="ImagesConcat" description="$string" enabled="true|false">
    <!--  The image files loaded by the task having as id $taskId will be concatenated. -->
    <Setting name="selectFiles" value="$taskId" />
    <Setting name="selectFiles" value="$taskId" />
    <!-- You can add as many selecteFiles as you want.-->

    <!-- Optional. Samba computer name. -->
    <Setting name="smbComputerName" value="$string" />
    <!-- Optional. Samba domain name. -->
    <Setting name="smbDomain" value="$string" />
    <!-- Optional. Samba username. -->
    <Setting name="smbUsername" value="$string" />
    <!-- Optional. Samba password. -->
    <Setting name="smbPassword" value="$string" />
  </Task>
</Tasks>
